{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "rhd/related-posts",
	"version": "2.0",
	"title": "Related Posts",
	"category": "widgets",
	"icon": "excerpt-view",
	"description": "Related posts.",
	"attributes": {
		"orderby": {
			"type": "string",
			"default": "rand"
		},
		"lookback": {
			"type": "integer",
			"default": 0
		},
		"count": {
			"type": "integer",
			"default": 4
		},
		"imageSize": {
			"type": "string",
			"default": "thumbnail"
		},
		"text": {
			"type": "string",
			"default": "You may also like..."
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "rhd",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
